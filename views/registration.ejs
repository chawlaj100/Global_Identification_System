<script type="text/javascript">
	function email_check()
	{
		var email = document.myform.form_email;
		var correct_mail = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
		var validate = document.getElementById("valid_mail");
		if (email.value.match(correct_mail)){
			validate.style.visibility = "hidden";
			return true;
		}
		else{
			validate.style.visibility = "visible";
			return false
		}
	}
	function password_check()
	{
		var pass = document.myform.form_password;
		var correct_pass = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}$/;
		var validate = document.getElementById("valid_pass1");
		if(pass.value.match(correct_pass))
