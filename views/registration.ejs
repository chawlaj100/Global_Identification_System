		if(aadhar.value.match(correct_aadhar))
		{
			validate.style.visibility="hidden";
			return true;
		}
		else
		{
			validate.style.visibility="visible";
			//setTimeout(function(){document.myform.form_mobile.focus();},0);
			return false;
		}
	}
	function country_validate()
	{
		var count = document.querySelector("#country");
		var validate = document.getElementById("valid_pan");
		if(count.value == "-1")
		{
			validate.style.visibility="visible";
			return false;
		}
		else
		{
			validate.style.visibility="hidden";
			return true;
		}
	}
	function validate_all()
	{
		var ec = email_check()
		var pc = password_check()
		var pm = password_match()
		var mv = mobile_validate()
		var av = aadhar_validate()
		var cv = country_validate()
		if (ec && pc && pm && mv && av && cv)
		{
			return true;
		}
		else
		{
			alert("Please verify all the fields before submission.");
			event.preventDefault();
			return false;
		}
	}
